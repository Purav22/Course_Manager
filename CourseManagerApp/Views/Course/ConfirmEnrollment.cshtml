@using System.Globalization
@model CourseViewModel

@{
    ViewData["Title"] = "Confirmation";
}

<div class="conatiner">
    
    <div class="row mt-3">
        <div class="col-md-12">
            <h6>You have been invited to enroll in the "@Model.Course.Name" course!</h6>
            <p>
                Hey @Model.NewStudent.Name, you have been invited to enroll in the "@Model.Course.Name" in room @Model.Course.RoomNumber
                starting on @Model.Course.StartDate.Value.ToString("MM/dd/yyy", CultureInfo.InvariantCulture) with instructor @Model.Course.Instructor - we would be thrilled
                to have join us but ask that you confirm your enrollment!
            </p>
        </div>
    </div>

    <form asp-controller="Course" asp-action="ConfirmEnrollment" asp-route-studentId="@Model.NewStudent.StudentId" method="post"
          enctype="application/x-www-form-urlencoded" class="row mt-3">

        <div class="col-sm-12">
            Do you want to enroll?&nbsp;&nbsp;
            <div class="form-check form-check-inline">
                <input type="radio" asp-for="IsConfirmEnrollment" value="Yes" class="form-check-input" />
                <label class="form-check-label" asp-for="IsConfirmEnrollment">Yes</label>
            </div>
            <div class="form-check form-check-inline">
                <input type="radio" asp-for="IsConfirmEnrollment" value="No" class="form-check-input" />
                <label class="form-check-label" asp-for="IsConfirmEnrollment">No</label>
            </div>
            &nbsp;&nbsp;<button type="submit" class="btn btn-primary mb-2">Submit response</button>
        </div>
    </form>
</div>
