@using CourseManagerApp.Entities
@model Course
@{
    ViewData["Title"] = "Edit a course";
}

<div class="conatiner">
    <form asp-controller="Course" asp-action="Edit" method="post" enctype="application/x-www-form-urlencoded">

       

        <div class="text-danger" asp-validation-summary="All"></div>

        <input type="hidden" asp-for="@Model.CourseId" />

        <div class="form-group">
            <label asp-for="@Model.Name">Name</label>
            <input type="text" asp-for="@Model.Name" class="form-control" />
        </div>

        <div class="form-group mt-3">
            <label asp-for="@Model.Instructor">Instructor</label>
            <input type="text" asp-for="@Model.Instructor" class="form-control" />
        </div>

        <div class="form-group mt-3">
            <label asp-for="@Model.StartDate">StartDate</label>
            <input type="datetime" asp-for="@Model.StartDate" class="form-control" />
        </div>

        <div class="form-group mt-3">
            <label asp-for="@Model.RoomNumber">Room number</label>
            <input type="text" asp-for="@Model.RoomNumber" class="form-control" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Course" asp-action="Items" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
